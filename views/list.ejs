<%- include('header'); -%>

    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <% for(var i=0;i<listOfItems.length;i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= listOfItems[i] %><p></p>
        </div>
        <% } %>

        <div >
            <form action="/" method="post">
                <input type="text" name="text1" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
        </div>
    </div>

    <%- include('footer'); -%>